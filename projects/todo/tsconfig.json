{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["es2017", "es6", "dom", "es2017.object", "esnext.asynciterable"],
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "strictNullChecks": true
  }
}
